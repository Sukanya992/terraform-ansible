pipeline {
    agent any 
    environment {
        ANSIBLE_PRIVATE_KEY = credentials('ansible')
        GOOGLE_APPLICATION_CREDENTIALS = credentials('gcp-key') 
    }
    stages {
        stage('Create infra') {
            steps {
                withCredentials([file(credentialsId: 'gcp-key', variable: 'GOOGLE_APPLICATION_CREDENTIALS')]) {
                    // Use wildcard to find and rename the key file
                    sh '''
                        mv $WORKSPACE/*.json $WORKSPACE/key.json
                    '''
                    
                    // Confirm the file is in the right location
                    sh 'ls -la $WORKSPACE'
                    
                    // Initialize and apply Terraform configuration
                    sh 'terraform init'
                    sh 'terraform plan -out=tfplan'
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        } // Closing for 'Create infra' stage
        
        stage('Run playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbook.yaml',
                    inventory: 'dynamic.gcp.yaml',
                    extras: "--private-key=${ANSIBLE_PRIVATE_KEY} -u jenkins"
                )
            }
        }
    }
}
