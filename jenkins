pipeline {
    agent any

    environment {
        GOOGLE_CREDENTIALS = credentials('gcp-key')  // GCP credentials for Terraform
        ANSIBLE_PRIVATE_KEY = credentials('dynamic') // Private key for Ansible
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/terraform-ansible.git'
            }
        }

        stage('Create Infra with Terraform') {
            steps {
                withCredentials([file(credentialsId: 'gcp-key', variable: 'GOOGLE_CREDENTIALS')]) {
                    sh '''
                        terraform init
                        terraform apply -var="google_credentials=${GOOGLE_CREDENTIALS}" --auto-approve
                    '''
                }
            }
        }

        stage('Setup GCP Key') {
            steps {
                withCredentials([file(credentialsId: 'gcp-key', variable: 'GOOGLE_APPLICATION_CREDENTIALS')]) {
                    script {
                        def destPath = "${WORKSPACE}/gcp-key.json"
                        // Copy the file to workspace
                        sh """
                            cp ${GOOGLE_APPLICATION_CREDENTIALS} ${destPath}
                            ls -l ${destPath}
                        """
                        // Set the environment variable securely for later stages
                        env.GOOGLE_APPLICATION_CREDENTIALS = destPath
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'dynamic', keyFileVariable: 'PRIVATE_KEY_FILE')]) {
                    sh """
                    ansible-playbook -i dynamic.gcp.yaml playbook.yaml --private-key=\$PRIVATE_KEY_FILE -u sukanya
                    """
                }
            }
        }
    }
}
